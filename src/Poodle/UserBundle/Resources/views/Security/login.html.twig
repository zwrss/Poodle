{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <h3>Zaloguj siÄ™ lub <a href="register">zarejestruj</a></h3>
    
    <div class="form-group top">
    <i class="glyphicon glyphicon-user"></i>
    <label for="inputUsernameEmail">{{ 'security.login.username'|trans }}</label>
    <input class="form-control" id="inputUsernameEmail" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    
    <div class="form-group">
    <i class="glyphicon glyphicon-lock"></i>
    <label for="inputPassword">{{ 'security.login.password'|trans }}</label>
    <input class="form-control" id="inputPassword" type="password" id="password" name="_password" required="required" />
    </div>
    
    <div class="checkbox pull-right">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input class="btn btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
{% endblock fos_user_content %}
